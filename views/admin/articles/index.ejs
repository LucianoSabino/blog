<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/articles/new">Criar nova artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Títulos</th>
                <th>Slug</th>
                <th>category</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody class="table table-bordered">
            <% articles.forEach(articles => { %>
                <tr>
                    <td><%= articles.id %></td>
                    <td><%= articles.title %></td>
                    <td><%= articles.slug %></td>
                    <td><%= articles.category.title %></td>
                    <td>
                        <form method="post" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= articles.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs") %>
<script>
    function confirmarDelecao(event, form){ 
        event.preventDefault();
        let decision = confirm("Você quer deletar essa artigo?");
        if(decision){
            form.submit();
        }
    }
</script>